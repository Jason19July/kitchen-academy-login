<body>

    <div id="loading" class="loading-screen">
        <p style="color: #800000; font-weight: bold;">Preparing your kitchen...</p>
    </div>

    <!-- 2. FILL IN: The Gamma Embed for the SAVOURY course -->
    <iframe id="course-content" src="https://savoury-foundations-ozszteb.gamma.site/" allow="fullscreen"></iframe>

    <script>
    // Ensure the DOM package is ready
    window.$memberstackDom.getCurrentMember().then(({ data: member }) => {
        // 3. FILL IN: The Plan ID for Savoury Foundations
        const COURSE_PLAN_ID = "pln_single-course-a32z0ulc";
        
        // 4. FILL IN: Your Gamma Sales Page for Savoury
        const SALES_PAGE_URL = "https://the-kitchen-academy-59amry9.gamma.site/start-cooking"; 

        const hasPlan = member && member.planConnections && member.planConnections.some(plan => plan.planId === COURSE_PLAN_ID);

        if (hasPlan) {
            document.getElementById('loading').style.display = 'none';
            document.getElementById('course-content').style.display = 'block';
        } else {
            window.location.href = SALES_PAGE_URL;
        }
    }).catch((error) => {
        console.error("Memberstack Error:", error);
    });
    </script>

